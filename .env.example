# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Rapira API Configuration
RAPIRA_API_URL=https://api.rapira.exchange
RAPIRA_API_KEY=your_rapira_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=true

# Admin Users (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789,987654321

# Default Markup Rate (percentage)
DEFAULT_MARKUP_RATE=2.5

# Manager Assignments (telegram_id:currency_pair format, comma-separated)
MANAGER_ASSIGNMENTS=123456789:USD_RUB,987654321:EUR_RUB

# Cache Configuration
CACHE_TTL_SECONDS=300

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
